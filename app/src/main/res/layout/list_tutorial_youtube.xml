<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundescuro"
    android:paddingTop="16dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img_video"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/raid_demo2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
         />

    <TextView
        android:id="@+id/titulovideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolinha 1 12 "
        android:textColor="@color/cortextobranco"
        android:textSize="18sp"
        android:layout_alignTop="@id/imagemevento"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/link_youtube"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>